<h1 class='center'><%= t(:signin) %></h1>

<div class='row'>
    <div class='span6 offset3'>
		<%= form_for(:session, url: '') do |f| %>
            <%= f.label :user %>
            <%= f.text_field :user %>
            
            <%= f.label :password %>
            <%= f.text_field :password %>

            <%= f.submit t(:signin), class: 'btn btn-large btn-primary' %>
        <% end %>
    </div>
</div>

